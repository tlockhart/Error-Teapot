<h1 class="text-center"> {{ title }}</h1>

{{#if errors}}
    {{#each errors}}
        <div class = "alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
{{/if}}

<div class = "container">
    <form method="POST" action="/register">
        <div class="form-group">
            <label for = "username">Username</label>
            <input type="text" name="username" class = "form-control" placeholder="Username" placeholder="no spaces allowed">
            <p class="error-msg">{{user}}</p>
        </div>
        <div class="form-group">
            <label for = "email">Email</label>
            <input type="email" name="email" class = "form-control" placeholder="Email">
            <p class="error-msg">{{email}}</p>
        </div>
        <div class="form-group">
            <label for = "password">Password</label>
            <input type="password" name="password" class = "form-control" placeholder="password" placeholder="no spaces allowed">
            <p class="error-msg">{{password}}</p>
        </div>
        <div class="form-group">
            <label for = "passwordMatch">Password</label>
            <input type="password" name="passwordMatch" class = "form-control" placeholder="password" placeholder="no spaces allowed">
            <p class="error-msg">{{password}}</p>
        </div>
        <button type = "submit" class = "btn main-search-btn">Submit</button>
    </form>
</div>

